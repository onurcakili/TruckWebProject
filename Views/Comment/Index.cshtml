@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Şöfor Bilgileri</h3>
		<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach(var item in Model) {

					<div class="col-lg-4 card">
						<a href="single.html">
							<img src="images/7.jpg" class="card-img-top img-fluid" alt="">
						</a>
						<div class="card-body">
							<ul class="blog-icons my-4">
								<li>
									<a href="#">
										<i class="far fa-calendar-alt"></i> Feb 20 .2018
									</a>
								</li>
								<li class="mx-2">
									<a href="#">
										<i class="far fa-comment"></i> 21
									</a>
								</li>
								<li>
									<a href="#">
										<i class="fas fa-eye"></i> @item.Category.CategoryName
									</a>
								</li>

							</ul>
							<h5 class="card-title">
								<a href="single.html">Şöfor Bilgisi 1</a>
							</h5>
							<p class="card-text mb-3">@item.CommentText </p>
							<a href="single.html" class="btn btn-primary read-m">Read More</a>
						</div>
					</div>   
					}
				</div>
				<!--//left-->
			</div>
		</div>
	</div>
</section>

